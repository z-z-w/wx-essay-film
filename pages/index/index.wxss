/**index.wxss**/
page{
  height: 100%;
  background-color: #b3d4db;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 100rpx;
}

.usermotto {
  width: 250rpx;
  height: 80rpx;
  margin-top: 200rpx;
  border: 1px solid #405f80;
  border-radius: 5px;
  text-align: center;
}
.usermotto text {
  color: #405f80;
  font-size: 30rpx;
  font-weight: 700;
  line-height: 80rpx;
}