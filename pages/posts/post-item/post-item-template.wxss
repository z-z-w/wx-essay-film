.post-container{
  display: flex;
  width: 100%;
  flex-direction: column;
  margin-top: 20rpx;
  background-color: #fff;
}
.post-author-date{
  margin: 25rpx;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.post-date{
  font-size: 12px;
}
.post-title{
  margin: 0 25rpx 20rpx;
  font-size: 24rpx;
  font-weight: 700;
}
.post-image{
  width: 100%;
  height: 400rpx;
}
.post-content{
  margin: 30rpx 20rpx 0 ;
  line-height: 60rpx;
  font-size: 12px;
}
.post-like{
  flex-direction: row;
  margin: 0 20rpx 30rpx;
}
.post-like-image{
  width: 30rpx;
  height: 30rpx;
  padding: 10rpx;
  vertical-align: middle;
}
.post-like-num{
  font-size: 10px;
  margin-right: 30rpx;
}