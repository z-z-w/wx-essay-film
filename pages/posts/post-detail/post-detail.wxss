.container{
  display: flex;
  flex-direction: column;
}

.head-image{
  width: 100%;
  height: 460rpx;
}

.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}

.author-date-container{
  position: relative;
  width: 90%;
  margin: 0 5%; 
  padding-bottom: 60rpx;
  border-bottom: 1px solid #ccc;
}

.author-date{
  margin: 30rpx 0;
}
.avatar{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.author, .const-text, .date{
  color: #666;
  font-size: 24rpx;
  margin-left: 25rpx; 
}

.title{
  font-size: 36rpx;
  font-weight: 700;
}

.collection{
  position: absolute;
  bottom: -30rpx;
  right: 100rpx;
  width: 60rpx;
  height: 60rpx;
}
.share{
  position: absolute;
  bottom: -30rpx;
  right: 10rpx;
  width: 60rpx;
  height: 60rpx;
}

.detail{
  width: 90%;
  margin: 50rpx 5% 0; 
  font-size: 30rpx;
}