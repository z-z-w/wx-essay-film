@import './movie-list/movie-list-template.wxss';
@import './movie-grid/movie-grid-template.wxss';

.search {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  background-color: #f2f2f2;
}
.search-img{
  margin: auto 0 auto 20rpx;
}
.placeholder{
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
}
.search-text{
  height: 100%;
  width: 600rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.movies-wrapper {
  background-color: #ededed;
}

.movies-template-container {
  margin-bottom: 20rpx;
}

.movies-template-container:last-child {
  margin-bottom: 0;
}

.search-panel{
  position: absolute;
  top: 80rpx;
}

.cancel-img{
  width: 30rpx;
  height: 30rpx;
  margin: auto 0 auto 20rpx;
}
